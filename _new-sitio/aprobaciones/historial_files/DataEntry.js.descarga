}

function isValidNumber(numberStr){
    if( numberStr == "" )
        return false;
    else
    {
        var valid = ".0123456789"
        var temp;
        
        for (var i=0; i<numberStr.length; i++) {
            temp = "" + numberStr.substring(i, i+1);

            if (valid.indexOf(temp) == "-1")
                return false;
        }

        return true;
    }
}

function isValidEmail(valor)
{
    if (/^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/.test(valor))
    {
        return (true);
    }
    else
    {
        return (false);
    }
}

