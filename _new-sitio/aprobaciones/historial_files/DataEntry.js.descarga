}

function validCharactersOnly(myfield, e, charsFilter)
{
    var key;
    var keychar;
    
    if (window.event)
        key = window.event.keyCode;
    else if (e)
        key = e.which;
    else
        return true;

    keychar = String.fromCharCode(key);
    
    return (new RegExp(charsFilter).test(keychar));
}

function ChangeDecimalCharacter(myfield, e) {
